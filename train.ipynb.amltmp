        "import os\r\n",
        "import torch\r\n",
        "import torch.utils.data\r\n",
        "import torchvision\r\n",
        "from PIL import Image\r\n",
        "from pycocotools.coco import COCO"
      ],
      "outputs": [],
      "execution_count": 100,
      "metadata": {
